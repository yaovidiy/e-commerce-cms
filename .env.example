DATABASE_URL=local.db
NODE_ENV=development

CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name_here
CLOUDFLARE_R2_PUBLIC_URL=your_public_bucket_url_here  # Public bucket URL (optional)

# LiqPay Payment Gateway (Ukrainian payment processor)
LIQPAY_PUBLIC_KEY=your_liqpay_public_key_here
LIQPAY_PRIVATE_KEY=your_liqpay_private_key_here
LIQPAY_SANDBOX=true  # Set to false for production

# Site Origin (for payment callbacks)
ORIGIN=http://localhost:5173  # Change to your production URL in prod

# Checkbox РРО (Ukrainian fiscal receipt system - required by law)
CHECKBOX_LOGIN=your_checkbox_email_or_login_here
CHECKBOX_PASSWORD=your_checkbox_password_here
CHECKBOX_LICENSE_KEY=your_checkbox_license_key_here
CHECKBOX_CASH_REGISTER_ID=your_cash_register_id_here  # Optional
CHECKBOX_PRODUCTION=false  # Set to true for production
